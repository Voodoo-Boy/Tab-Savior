{
    "name": "Tab Savior",
    "description": "Save tabs for reopening next time",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "16": "icon/icons8-owl-16.png",
        "32": "icon/icons8-owl-32.png",
        "48": "icon/icons8-owl-48.png",
        "128": "icon/icons8-owl-128.png"
    },
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "background-contextmenu.js"
        ]
    },
    "page_action": {
        "default_icon": {
            "16": "icon/icons8-owl-16.png",
            "32": "icon/icons8-owl-32.png",
            "48": "icon/icons8-owl-48.png",
            "128": "icon/icons8-owl-128.png"
        }
    }
}